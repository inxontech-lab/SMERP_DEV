@page "/wasm-sample"

<PageTitle>WebAssembly Sample</PageTitle>

<h1>WebAssembly Sample Page</h1>

<p>This page is rendered with <strong>Interactive WebAssembly</strong>.</p>

<div class="mb-3">
    <label for="nameInput" class="form-label">Enter your name</label>
    <input id="nameInput" class="form-control" @bind="userName" placeholder="Type here" />
</div>

<button class="btn btn-primary" @onclick="GreetUser">Generate Greeting</button>

@if (!string.IsNullOrWhiteSpace(greeting))
{
    <p class="mt-3" role="status">@greeting</p>
}

@code {
    private string userName = string.Empty;
    private string greeting = string.Empty;

    private void GreetUser()
    {
        greeting = string.IsNullOrWhiteSpace(userName)
            ? "Hello from WebAssembly!"
            : $"Hello, {userName.Trim()}! This is running on WebAssembly.";
    }
}
