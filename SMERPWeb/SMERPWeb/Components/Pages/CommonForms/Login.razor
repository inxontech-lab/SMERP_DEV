@page "/"
@layout Layout.LoginLayout

<PageTitle>Login</PageTitle>

@* class="login-page" 
    
*@
<div>
    <div class="login-card">
        <div class="logo-wrap">
            <img src="images/inxon-logo.png" alt="Inxon logo" class="inxon-logo" />
        </div>

        @* <h1>Sign in</h1> *@
        <h2 class="subtitle">Sign in to continue to your workspace.</h2>

        <div class="form-grid">
            <div class="field-group">
                <label for="tenantEmail">Tenant Email</label>
                <RadzenTextBox id="tenantEmail"
                               Name="tenantEmail"
                               @bind-Value="TenantEmail"
                               Placeholder="tenant@company.com"
                               Style="width:100%;" />
            </div>

            <div class="field-group">
                <label for="userName">User Name</label>
                <RadzenTextBox id="userName"
                               Name="userName"
                               @bind-Value="UserName"
                               Placeholder="Enter user name"
                               Style="width:100%;" />
            </div>

            <div class="field-group">
                <label for="password">Password</label>
                <RadzenPassword id="password"
                                Name="password"
                                @bind-Value="Password"
                                Placeholder="Enter password"
                                Style="width:100%;" />
            </div>

            <RadzenButton Text="@(IsLoggingIn ? "Signing in..." : "Login")"
                          ButtonStyle="ButtonStyle.Primary"
                          class="login-btn"
                          Disabled="@IsLoggingIn"
                          Click="@OnLoginClicked" />

            @if (!string.IsNullOrWhiteSpace(ErrorMessage))
            {
                <RadzenText Text="@ErrorMessage" Style="color:#dc3545; font-size:0.9rem;" />
            }
        </div>
    </div>
</div>
