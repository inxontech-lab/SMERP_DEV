@page "/Role"

<PageTitle>Role Management</PageTitle>

<RadzenRow Gap="1rem">
    <RadzenColumn Size="12" SizeLG="7">
        <RadzenCard>
            <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.SpaceBetween" AlignItems="AlignItems.Center" class="rz-mb-3">
                <RadzenText Text="Roles" TextStyle="TextStyle.H5" />
                <RadzenButton Text="New Role" Icon="add_circle" Click="ResetForm" ButtonStyle="ButtonStyle.Light" />
            </RadzenStack>

            <RadzenDataGrid Data="Roles" TItem="Domain.SaasDBModels.Role" AllowPaging="true" AllowFiltering="true" PageSize="10" EmptyText="No roles found.">
                <Columns>
                    <RadzenDataGridColumn TItem="Domain.SaasDBModels.Role" Property="Id" Title="ID" Width="80px" />
                    <RadzenDataGridColumn TItem="Domain.SaasDBModels.Role" Title="Tenant" Width="180px">
                        <Template Context="item">@GetTenantName(item.TenantId)</Template>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Domain.SaasDBModels.Role" Property="Name" Title="Name" />
                    <RadzenDataGridColumn TItem="Domain.SaasDBModels.Role" Property="IsActive" Title="Active" Width="100px" />
                    <RadzenDataGridColumn TItem="Domain.SaasDBModels.Role" Title="Actions" Width="180px">
                        <Template Context="item">
                            <RadzenButton Icon="edit" Size="ButtonSize.Small" Click="@(() => Edit(item))" class="rz-mr-2" />
                            <RadzenButton Icon="delete" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Danger" Click="@(() => DeleteAsync(item.Id))" />
                        </Template>
                    </RadzenDataGridColumn>
                </Columns>
            </RadzenDataGrid>
        </RadzenCard>
    </RadzenColumn>

    <RadzenColumn Size="12" SizeLG="5">
        <RadzenCard>
            <RadzenText Text="@(EditingId.HasValue ? "Edit Role" : "Create Role")" TextStyle="TextStyle.H5" class="rz-mb-3" />

            <RadzenTemplateForm TItem="Domain.SaasReqDTO.RoleRequest" Data="FormModel" Submit="SaveAsync">
                <RadzenStack Gap="0.75rem">
                    <div>
                        <RadzenLabel Text="Tenant" Component="TenantId" />
                        <RadzenDropDown Name="TenantId" TValue="int" @bind-Value="FormModel.TenantId" Data="Tenants" TextProperty="Name" ValueProperty="Id" Style="width:100%;" AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" />
                        <RadzenRequiredValidator Component="TenantId" Text="Tenant is required" Popup="false" />
                    </div>

                    <div>
                        <RadzenLabel Text="Name" Component="Name" />
                        <RadzenTextBox Name="Name" @bind-Value="FormModel.Name" Style="width:100%;" />
                        <RadzenRequiredValidator Component="Name" Text="Name is required" Popup="false" />
                    </div>

                    <div class="rz-d-flex rz-align-items-center">
                        <RadzenCheckBox Name="IsActive" @bind-Value="FormModel.IsActive" TValue="bool" />
                        <RadzenLabel Text="Active" class="rz-ml-2" />
                    </div>

                    <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
                        <RadzenButton Text="Save" Icon="save" ButtonType="ButtonType.Submit" ButtonStyle="ButtonStyle.Primary" />
                        <RadzenButton Text="Cancel" Icon="close" Click="ResetForm" ButtonStyle="ButtonStyle.Light" />
                    </RadzenStack>
                </RadzenStack>
            </RadzenTemplateForm>

            @if (!string.IsNullOrWhiteSpace(ErrorMessage))
            {
                <RadzenAlert AlertStyle="AlertStyle.Danger" class="rz-mt-3">@ErrorMessage</RadzenAlert>
            }

            @if (!string.IsNullOrWhiteSpace(SuccessMessage))
            {
                <RadzenAlert AlertStyle="AlertStyle.Success" class="rz-mt-3">@SuccessMessage</RadzenAlert>
            }
        </RadzenCard>
    </RadzenColumn>
</RadzenRow>
