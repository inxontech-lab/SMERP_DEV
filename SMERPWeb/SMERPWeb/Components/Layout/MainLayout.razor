@inherits LayoutComponentBase



<HeadContent>
    <link href="css/app.css" rel="stylesheet" />
</HeadContent>

<RadzenComponents />

<RadzenLayout>
    <RadzenHeader class="app-topbar">
        <SMERPWeb.Components.Pages.SharedComponent.MainLayoutHeader OnSidebarToggle="@SidebarToggleClick" />
    </RadzenHeader>

    <RadzenBody>
        @Body
    </RadzenBody>

    <RadzenSidebar Expanded="@sidebarExpanded">
       <SMERPWeb.Components.Pages.SharedComponent.SideBarComponent />
    </RadzenSidebar>
</RadzenLayout>

@code {
    

    private bool sidebarExpanded = true;
    [Inject] protected NavigationManager NavigationManager { get; set; } = default!;


    private void SidebarToggleClick() => sidebarExpanded = !sidebarExpanded;

    private void NavigateToModuleLanding() => NavigationManager.NavigateTo("/module-landing", true);
}
