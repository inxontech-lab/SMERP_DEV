@inherits LayoutComponentBase

<RadzenLayout>
    <RadzenHeader class="top-row rz-shadow-2">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.75rem" class="h-100 px-3">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <RadzenText TextStyle="TextStyle.H6" class="rz-mb-0">SMERPWeb</RadzenText>
        </RadzenStack>
    </RadzenHeader>

    <RadzenSidebar @bind-Expanded="sidebarExpanded">
        <NavMenu />
    </RadzenSidebar>

    <RadzenBody>
        <div class="content-container">
            @Body
        </div>
    </RadzenBody>
</RadzenLayout>

<RadzenComponents />

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool sidebarExpanded = true;
}
