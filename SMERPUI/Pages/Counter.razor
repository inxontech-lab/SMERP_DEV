@page "/counter"

<PageTitle>Counter</PageTitle>

<RadzenCard>
    <h1>Counter</h1>

    <p role="status">Current count: @currentCount</p>

    <RadzenButton Text="Click me" Icon="add" Click="IncrementCount" />
</RadzenCard>

@code {
    private int currentCount;

    private void IncrementCount()
    {
        currentCount++;
    }
}
